@model List<Book>

@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<head>
    <!DOCTYPE html>
    <html lang="en">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BookstoreWebApplication.WebMvcApp</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/BookstoreWebApplication.WebMvcApp.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/stylesheet.css" />
</head>
<body>
    <header class="banner-project background-accent">
        <span class="title">
            Book e-shop
        </span>
        <span>
            BookstoreWebApplication.WebMvcApp
        </span>
    </header>

    <div class="bg-container">
        <div class="acc-box">
            <h2 class="title text-accent">Login</h2>
            <input type="email" name="" value="" placeholder="Email" />
            <input type="password" name="" value="" placeholder="Password" />
            <p>
                Don't have an existing account?
                <a class="text-accent" asp-area="" asp-controller="Books" asp-action="Register">
                    Register now!
                </a>
            </p>

            <a asp-controller="Books" asp-action="List" class="background-accent btn btn-success">Login</a>
        </div>
    </div>

    <footer class="background-accent banner-footer">
    </footer>
</body>