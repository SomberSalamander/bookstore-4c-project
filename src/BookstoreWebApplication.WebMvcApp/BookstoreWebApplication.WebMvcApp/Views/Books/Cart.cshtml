@model BookstoreWebApplication.WebMvcApp.Models.Books.CartViewModel


@{
    ViewData["Title"] = "List";
    Layout = null;
}

<head>
    <!DOCTYPE html>
    <html lang="en">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BookstoreWebApplication.WebMvcApp</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/BookstoreWebApplication.WebMvcApp.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/stylesheet.css" />
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <div class="banner-project background-accent">BookstoreWebApplication.WebMvcApp</div>

    <header class="banner-title">
        <span class="title text-accent">
            Book e-shop
        </span>
    </header>

    <div class="main">
        <h1>@Model.User.UserId) @Model.User.Email's cart</h1>
        <p>Cart ID: @Model.Cart.CartId</p>
        
        <table class="table-light table-striped">
            <thead>
                <tr>
                    <th>Book name</th>
                    <th>Author</th>
                    <th>Price</th>
                    <th>Quantity</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.CartItems)
                {
                    <tr>
                        <td>@item.Book.Title</td>
                        <td>@item.Book.Author</td>
                        <td>@item.Book.Price CZK</td>
                        <td>@item.CartItem.Quantity</td>
                    </tr>
                }
            </tbody>
        </table>


    </div>

    <footer class="mt-5 background-accent banner-project">
    </footer>
</body>